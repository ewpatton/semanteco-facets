@base <http://escience.rpi.edu/ontology/semanteco/4/0/test.ttl> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix unit:  <http://sweet.jpl.nasa.gov/2.1/reprSciUnits.owl#> .
@prefix escim: <http://escience.rpi.edu/ontology/semanteco/4/0/measure.owl#> .
@prefix pol:   <http://escience.rpi.edu/ontology/semanteco/4/0/pollution.owl#> .
@prefix water: <http://escience.rpi.edu/ontology/semanteco/4/0/water.owl#> .
@prefix : <http://escience.rpi.edu/ontology/semanteco/4/0/test.ttl#> .

:ArsenicThresholdViolation a owl:Class ;
  rdfs:subClassOf pol:RegulationViolation ;
  owl:intersectionOf (
    water:WaterMeasurement
    [ a owl:Restriction ;
      owl:onProperty escim:hasCharacteristic ;
      owl:hasValue pol:Arsenic
    ]
    [ a owl:Restriction ;
      owl:onProperty escim:hasValue ;
      owl:someValuesFrom [ a rdfs:Datatype ;
        owl:onDatatype xsd:decimal ;
        owl:withRestrictions ([
          xsd:minInclusive 0.010
        ])
      ]
    ]
    [ a owl:Restriction ;
      owl:onProperty unit:hasUnit ;
      owl:hasValue unit:mg_per_l
    ]
  ) .

:ArsenicMeasurment a water:WaterMeasurement ;
  escim:hasCharacteristic pol:Arsenic ;
  escim:hasValue 2.0 ;
  unit:hasUnit unit:mg_per_l ;
  .